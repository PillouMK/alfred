<UserControl x:Class="Alfred.Components.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alfred.Components"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d"
             d:DesignWidth="*" Height="50">

    <Grid Background="#1B1842" VerticalAlignment="Top" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="159*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image Source="/Alfred;component/assets/logo_color.png" Width="40" Height="40"/>
            <TextBlock Text="Alfred" VerticalAlignment="Center" Foreground="White"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="right" Margin="671,0,0,0">
            <fa:ImageAwesome Icon="SignOut" VerticalAlignment="Center" Width="30" Height="30" Foreground="Red" Name="SignOut"/>
            <Button Content="Icon2" Margin="0,0,10,0" />
            <Button Content="Icon3" />
        </StackPanel>
    </Grid>
</UserControl>
